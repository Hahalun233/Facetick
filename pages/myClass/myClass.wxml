<!--pages/myClass/myClass.wxml-->
<!--pages/history/history.wxml-->

<t-navbar title="Facetick" t-class-title="nav-title" />

<van-search value="{{ value }}" placeholder="请输入搜索关键词" bind:change="onChange" bind:search="onSearch" />

<t-button class="addBtn" theme="primary" size="large" icon="add" shape="circle" bindtap="showPopup"></t-button>


<view class="cell">
    <t-cell wx:for="{{classList}}" hover="true" title="{{item.name}}" description="暂定" align="top" t-class-image="title-image-large" image="/icons/classphoto.png" url="/pages/myClassInfo/myClassInfo" />
</view>
<!-- 添加班级弹窗 -->



<van-popup show="{{  showAddClass }}" position="center" bind:close="onClose" round closeable="true" custom-style="height: 70%">


    <view class="continer">

        <van-cell-group>
            <van-field model:value="{{ className }}" placeholder="请输入班级名称"  clickable="true" required="true" bind:change="onChange" />
            <van-field model:value="{{ classRoom }}" placeholder="请输入教室" clickable="true" bind:change="onChange" />
        </van-cell-group>



    </view>
</van-popup>